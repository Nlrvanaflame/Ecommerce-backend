{
  "compilerOptions": {
    "types": ["jest", "node"],
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "outDir": "./dist"  
  },
  "include": [
    "src/**/*",
    "index.ts",
    "app.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
